<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfCustomControlLibrary1">
    <Style TargetType="{x:Type local:CustomControl1}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomControl1}">
                    <StackPanel>
                        <Label Content="Введите текст:" HorizontalAlignment="Center"></Label>
                        <TextBox x:Name="txtNormal" Height="80" Width="200"></TextBox>
                        <Label HorizontalAlignment="Center" Content="Отзеркаленный текст:"></Label>
                        <TextBlock x:Name="txtReverse" Height="80" Width="200"></TextBlock>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
